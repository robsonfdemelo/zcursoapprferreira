<mvc:View xmlns:layout="sap.ui.layout" controllerName="zapprferreira.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:shelbar="sap.f"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:u="sap.ui.unified">
    <Page id="page" title="{i18n>title}">
        <customHeader>
            <shelbar:ShellBar title="Exed Consulting" showCopilot="false" showSearch="false" showMenuButton="false" showNotifications="false" homeIcon="../Imagens/logo.jpeg" showProductSwitcher="false" showNavButton="false" />
        </customHeader>
        <content>
            <ObjectHeader title="Curso Fiori" icon="../Imagens/logo.jpeg" class="sapUiResponsivePadding--header">
                <statuses>
                    <ObjectStatus text="Em desenvolvimento" state="Error" />
                </statuses>
                <ObjectAttribute text="Francisco Mafra - Instrutor" active="false" />
                <ObjectAttribute text="Ricardo Alcantara - Instrutor" active="false" />
                <ObjectAttribute text="Material Curso" active="true" press="acessaMaterialCurso" />
                <ObjectAttribute text="Meu GitHub" active="true" press="acessaGitHub" />
            </ObjectHeader>
            <smartFilterBar:SmartFilterBar id="SF_CURSO" persistencyKey="SmartTablePKey" useToolbar="false" entitySet="AlunosFioriSet" visible="true">
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration key="Usuario" index="0" label="Usuario" groupId="_BASIC" width="auto" visibleInAdvancedArea="true" />
                    <smartFilterBar:ControlConfiguration key="Nome" index="1" label="Nome" groupId="_BASIC" width="auto" visibleInAdvancedArea="true" />
                </smartFilterBar:controlConfiguration>
            </smartFilterBar:SmartFilterBar>
            <smartTable:SmartTable entitySet="AlunosFioriSet" smartFilterId="SF_CURSO" useExportToExcel="true" useVariantManagement="true" useTablePersonalisation="true" header="Alunos" showRowCount="true" showFullScreenButton="true" enableAutoBinding="true" requestAtLeastFields="Usuario,Nome,Email,ProjetoSegw" initiallyVisibleFields="Usuario,Nome,Email,ProjetoSegw" beforeRebindTable="onBeforeRebindTable" tableType="Table" id="SmartTable">
                <smartTable:customToolbar>
                    <OverflowToolbar design="Transparent">
                        <u:FileUploader name="myFileUpload" change="onChangeArquivo" />
                        <ToolbarSpacer />
                        <OverflowToolbarButton id="btEdit" icon="sap-icon://edit" press="onEdit" />
                        <OverflowToolbarButton id="btAdd" icon="sap-icon://add" press="onAdciona" />
                        <OverflowToolbarButton id="btDelete" icon="sap-icon://delete" press="onDeleta" />
                    </OverflowToolbar>
                </smartTable:customToolbar>
                <Table id="idTable" growing="true" mode="MultiSelect">
                    <ColumnListItem highlight="Success" />
                </Table>
                <smartTable:layoutData>
                    <FlexItemData growFactor="1" baseSize="0%" />
                </smartTable:layoutData>
            </smartTable:SmartTable>
        </content>
        <footer>
            <Toolbar id="idOverTollbar">
                <Button press="handleMessagePopoverPress" text="Mensagens {Auxiliar>/Menssagens/length}" icon="sap-icon://message-popup" id="messagePopoverBtn" tooltip="Mensagens" visible="true" iconFirst="true" />
                <ToolbarSpacer id="idToolbarSpacerD" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
